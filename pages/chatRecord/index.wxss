page{
	height: 100%;
}
.page {
	height: 100%;
}
.chatPage {
	width: 100%;
	height: 100%;
	background-color: rgb(237, 237, 237);
}

.inputView {
	width: 100%;
	background-color: rgb(247, 247, 247);
	position: fixed;
	bottom: 0;
	left: 0;
	display: flex;
	align-items: center;
	z-index: 100;
}
.inputGroup {
	width: 100%;
	height: 100%;
}


.scroll_view {
	height: 90%;
}
::-webkit-scrollbar{
	width: 0;
	height: 0;
	color: transparent;
}
.left {
	width: 100%;
	display: flex;
	align-items: center;
	margin-bottom: 0.625rem;
}
.head_img {
	margin: 20rpx;
}
.msg {
	padding: 10rpx;
	border: 1px solid black;
	border-radius: 5px;
}

.right {
	width: 100%;
	display: flex;
	flex-direction: row-reverse;
	align-items: center;
	margin-bottom: 0.625rem;
}


.overlay {
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}
